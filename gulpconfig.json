{
  "browserSyncOptions" : {
    "server": { "baseDir": "./" },
    "notify": false
  },
  "browserSyncWatchFiles" : [
    "./css/*.min.css",
    "./js/*.min.js",
    "./**/*.php",
    "./**/*.html"
  ],
  "paths" : {
    "js": "./assets/js",
    "css": "./assets/css",
    "img": "./assets/images",
		"imgsrc": "./src/images",
    "scss": "./src/scss",
    "node": "./node_modules/",
    "dev": "./src",
    "dist": "./dist",
    "devdist": "./dev-dist",
    "vendor": ""
  }
}
